               <td>
                    <a class="btn btn-success" href="/Project/details/@item.Id">Details</a> |
                    <a class="btn btn-success" href="/Project/GetEditForm/@item.Id">Edit</a> |
                    <a class="btn btn-success" href="/Project/delete/@item.Id">Delete</a>

                </td> *@ 
            </tr>
        }
