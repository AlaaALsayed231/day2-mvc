@model List<Project>
@{
    int i = 0;
}

<style>
    button {
      
        margin:20px
      
    }
    h1{
        text-align:center;
        margin:15px;
        padding:15px

    }
</style>
   
<h1>Project List </h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">location</th>
            <th scope="col">City</th>
            <th scope="col">Department</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(++i)</th>
                <td>@item.Pname</td>
                <td>@item.Plocation</td>
                <td>@item.City</td>
                <td>@item.departments?.Dname </td>
                <td>
                    <a class ="btn btn-success" href="/Project/details/@item.Id">Details</a> |
                    <a class="btn btn-success" href="/Project/GetEditForm/@item.Id">Edit</a> |
                    <a class="btn btn-success" href="/Project/delete/@item.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>

   
</table>
<button type="button" class="btn btn-primary btn-lg"><a href=/Project/getaddform>Add New Project</a></button>