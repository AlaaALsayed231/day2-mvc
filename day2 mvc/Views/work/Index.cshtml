@{
    int i = 1;

}
@model List<Works_For>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Project Name</th>
            <th scope="col">Hours</th>
            <th scope="col">More Details</th>
            <th scope="col">Edit</th>
@*             <th scope="col">Delete</th>
 *@        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@item.employee .Fname @item.employee.Lname</td>
                <td>@item.project.Pname</td>
                <td style="color:@ViewBag.Colors[i-2]">@item.Hours</td>
                <td><a href="/work/Details/@item.ESSN"><i class="fa-solid fa-circle-info"></i></a></td>
                <td><a asp-action="Edit" asp-controller="work" asp-route-id="@item.ESSN" class="btn btn-primary">Edit</a> </td>
@*                 <td><a asp-action="Delete" asp-controller="worksfor" class="btn btn-danger">Delete</a> </td>
 *@
            </tr>
        }  
    </tbody>
</table>

